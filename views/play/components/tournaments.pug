.tournament-info(ng-repeat="tournament in tournamentsList | dateFilter:'activeTournaments':dateStart:dateEnd")
  .row
    .col-md-8
      section.tournament-date
        label.tournament-date__month
          | {{ tournament.dateStart | date: 'MMM' }}

        label.tournament-date__day
          | {{ tournament.dateStart | date: 'dd' }}

        label.tournament-date__year
         | {{ tournament.dateStart | date: 'yyyy' }}

      section.tournament-content
        h2.tournament-content__title
          | {{ tournament.name }}

        label.tournament-content__category
          | week tournament

    .col-md-4
      section.tournament-countdown
        h3.tournament-countdown__title
          | Event ends:

        label.tournament-time
          | {{ tournament.dateEnd | date:'dd MMMM yyyy' }}


        a(href="/market" class="btn btn-danger btn-block tournament-countdown__btn")
          | Join Tournament
