//- Pagination -----------------------------------------------------------------

mixin pagination(start, numPages, curr, base, query)
  - start    = start    || 1
  - numPages = numPages || 1
  - curr     = curr     || 1
  - base     = base     || '#' 
  .pagination
    ul
      - if(curr==1) 
        li.disabled
          a(href='#') Prev
      - else
        li
          a(href='#{curr-1}#{query}') Prev
          
      - for(var i=start;i<start+numPages;i++) {
        - if(i==curr)
          li
            a(href='#{base}#{i}#{query}') 
              strong #{i}
        - else
          li
            a(href='#{base}#{i}#{query}') #{i}
      - }
      
      - if(curr>=numPages)
        li.disabled
          a(href='#') Next
      - else
        li
          a(href='#{curr - 0 + 1}#{query}') Next

//- Usage:
//- pagination(3,5,4,'/fda/')

